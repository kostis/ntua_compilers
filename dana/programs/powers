def main 

  def power: base as int, exp as int, result as ref int
    if exp < 1:
      result := 1
    else:
      if exp % 2 == 0:
        var temp is int
        power: base, exp / 2, temp
        result := temp * temp
      else:
        var temp is int
        power: base, exp - 1, temp
        result := base * temp

  var base is int
  var exponent is int
  var res is int

  writeString: "Enter base: "
  base := readInteger()
  writeString: "Enter exponent (non-negative): "
  exponent := readInteger()

  power: base, exponent, res

  writeString: "Result: "
  writeInteger: res
